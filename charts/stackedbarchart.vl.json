{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 250,
  "title": {"text":"Forest vs non-forest area by state (2019-2020)", "anchor": "middle", "offset": 15},
  "data": {
    "url": "https://raw.githubusercontent.com/chongps17/3179/refs/heads/main/data/fire_forest_data.csv"
  },
  "transform": [
    {"fold": ["Forest", "Non-Forest"], "as": ["area_type", "area_value"]},
    {"filter": "datum.percent_forest > 0"}
  ],
  "mark": "bar",
  "encoding": {
    "y": {"field": "state", "type": "nominal", "title": "State"},
    "x": {"field": "area_value", "type": "quantitative", "title": "Area (kmÂ²)", "stack": "normalize"},
    "color": {
      "field": "area_type",
      "type": "nominal",
      "title": "Area Type",
      "scale": {
        "domain": ["Forest", "Non-Forest"],
        "range": ["#da4f45", "#428bd4"]
      }
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "area_type", "title": "Type"},
      {"field": "area_value", "title": "Area ('000 Hectares)"}
    ]
  }
}
