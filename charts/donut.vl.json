{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Day vs Night Fire Detections",
  "width": 300,
  "height": 280,

  "data": {
    "url": "https://raw.githubusercontent.com/chongps17/3179/main/data/fire_archive_M6_96619.csv",
    "format": {"type": "csv"}
  },

  "title": {"text": "Day vs Night Fire Detections", "offset": 15},

  "transform": [
    {
      "calculate": "datum.daynight == 'D' ? 'Day' : 'Night'",
      "as": "day_night_label"
    },
    {
      "aggregate": [{"op": "count", "as": "fire_count"}],
      "groupby": ["day_night_label"]
    }
  ],

  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 100},
      "encoding": {
        "theta": {"field": "fire_count", "type": "quantitative"},
        "color": {
          "field": "day_night_label",
          "type": "nominal",
          "title": "Time of Detection",
          "scale": {"range": ["#da4f45", "#428bd4"]},
          "legend": null
        },
        "tooltip": [
          {"field": "day_night_label", "title": "Time of Day"},
          {"field": "fire_count", "title": "Fire Count", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Total Fires: 36,011",
        "fontSize": 16,
        "fontWeight": "bold",
        "align": "center",
        "baseline": "middle"
      }
    }
  ]
}
